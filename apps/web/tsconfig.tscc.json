{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "sourceMap": true,
    "jsx": "react",
    "lib": ["dom"],
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noLib": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": ".",
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES2019",
    "strictNullChecks": false,
    "strict": false,
    "noUnusedLocals": false,
    "typeRoots": ["./node_modules/mapkit-typescript"],
    "types": ["mapkit", "@types/requestidlecallback"]
  },
  "include": ["src/**/*", "web/**/*", "shared/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "src/graphql", "@types/**"]
}
