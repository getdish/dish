{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    // "composite": true,
    "baseUrl": "./src",
    "module": "CommonJS",
    "sourceMap": false,
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": false,
    "noEmit": true,
    "outDir": "_",
    "rootDir": ".",
    "typeRoots": ["./node_modules/mapkit-typescript", "./node_modules/@types"]
  },
  "include": ["web/**/*", "shared/**/*"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "web/server.tsx",
    "node_modules"
  ],
  "references": [
    { "path": "../../packages/ui" },
    { "path": "../../packages/ui-static" },
    { "path": "../../packages/async" },
    { "path": "../../packages/graph" },
    { "path": "../../packages/rollup-plugin-tscc" },
    { "path": "../../packages/tsickle-loader" }
  ]
}
