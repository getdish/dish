{
  "extends": "../tsconfig",

  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "outDir": "_",
    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "target": "esnext",
    "allowJs": true,
    "baseUrl": ".",

    "removeComments": true,
    "typeRoots": [
      "node_modules/@types",
      "./types",
      "../../node_modules/@types"
    ],
    "composite": true
  },

  "include": [
    "src",
    "web",
    "shared",
    "node_modules/@types",
    "../../node_modules/@types"
  ],

  "exclude": ["**", "**/_"],

  "references": [
    {
      "path": "../packages/async"
    },
    {
      "path": "../packages/graph"
    },
    {
      "path": "../packages/helpers"
    },
    {
      "path": "../packages/use-store"
    },
    {
      "path": "../packages/react-feather"
    }
  ]
}
