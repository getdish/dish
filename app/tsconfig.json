{
  "extends": "../tsconfig.base",

  "compilerOptions": {
    "paths": {
      "@dish/*": ["../packages/*/src"],
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "noFallthroughCasesInSwitch": true,
    "outDir": "_",
    "emitDeclarationOnly": false,
    "noEmit": true,
    "noEmitHelpers": true,
    "noImplicitReturns": false,
    "target": "es2019",
    "strict": false,
    "strictNullChecks": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types",
      "./types",
      "../../node_modules/@types"
    ],
  },

  "include": [
    "src",
    "declaration.d.ts"
  ],

  "exclude": ["_"]
}
