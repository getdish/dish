{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "outDir": "_",
    "baseUrl": "./src",
    "strict": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": ["_", "node_modules", "tmp", "dist", "server.ts", ".firebase"],
  "references": [
    {
      "path": "../../app/config"
    },
    {
      "path": "../../packages/gloss"
    },
    {
      "path": "../../packages/color"
    },
    {
      "path": "../../packages/use-store"
    },
    {
      "path": "../../packages/react-textfit"
    }
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}
