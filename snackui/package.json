{
  "name": "snackui-monorepo",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": "12.16.1"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "@dish/proxy-worm",
      "@dish/proxy-worm/**"
    ]
  },
  "scripts": {
    "build": "ultra -r --no-pretty --concurrency 16 build",
    "build:watch": "ultra -r --no-pretty --concurrency 500 watch",
    "test": "ultra -r --no-pretty --serial test",
    "prettier": "prettier --write \"**/*.{ts,tsx}\" || true",
    "publish:all": "lerna publish"
  },
  "devDependencies": {
    "ava": "^3.14.0",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "ts-node": "^9.1.1",
    "ultra-runner": "^3.6.0"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
