{
  "name": "snackui-monorepo",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=10 <=15"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "installConfig.hoistingLimits": [
      "@dish/proxy-worm",
      "@dish/proxy-worm/**"
    ]
  },
  "scripts": {
    "build": "ultra -r --no-pretty --build",
    "watch": "ultra -r --no-pretty watch",
    "test": "ultra -r --no-pretty --serial test",
    "prettier": "prettier --write \"**/*.{ts,tsx}\" || true",
    "publish:all": "lerna publish"
  },
  "dependencies": {
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "ultra-runner": "^3.10.5"
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
