{
  "name": "snackui-monorepo",
  "private": true,
  "version": "0.0.0",
  "repository": {
    "url": "https://github.com/snackui/snackui"
  },
  "engines": {
    "node": ">=10 <=17"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "installConfig.hoistingLimits": [
      "@dish/proxy-worm",
      "@dish/proxy-worm/**"
    ]
  },
  "scripts": {
    "build": "ultra -r --no-pretty --build",
    "watch": "ultra -r --no-pretty watch",
    "test": "ultra -r --no-pretty --serial test",
    "prettier": "prettier --write \"**/*.{ts,tsx}\" || true",
    "version:minor:parent": "npx lerna version minor --no-changelog --no-git-tag-version --no-push",
    "version:patch:parent": "npx lerna version patch --no-changelog --no-git-tag-version --no-push",
    "version:minor": "npx lerna version minor --no-push --force-publish",
    "version:patch": "npx lerna version patch --no-push --force-publish",
    "publish": "ultra -r --no-pretty npm publish"
  },
  "resolutions": {
    "react": "0.0.0-experimental-b1a1cb116-20210924",
    "react-dom": "0.0.0-experimental-b1a1cb116-20210924",
    "react-refresh": "0.0.0-experimental-b1a1cb116-20210924",
    "react-test-renderer": "0.0.0-experimental-b1a1cb116-20210924",
    "@testing-library/react": "13.0.0-alpha.1",
    "esbuild": "0.11.20"
  },
  "dependencies": {
    "esbuild-jest": "^0.5.0",
    "prettier": "^2.3.0",
    "prettier-plugin-import-sort": "^0.0.6",
    "react-native-web": "^0.15.6",
    "ultra-runner": "^3.10.5"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^2.1.1",
    "lerna": "^4.0.0",
    "rollup-plugin-flat-dts": "^1.3.0"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
