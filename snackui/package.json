{
  "name": "snackui-monorepo",
  "private": true,
  "version": "0.0.0",
  "repository": {
    "url": "https://github.com/snackui/snackui"
  },
  "engines": {
    "node": ">=10 <=15"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "installConfig.hoistingLimits": [
      "@dish/proxy-worm",
      "@dish/proxy-worm/**"
    ]
  },
  "scripts": {
    "build": "ultra -r --no-pretty --build",
    "watch": "ultra -r --no-pretty watch",
    "test": "ultra -r --no-pretty --serial test",
    "prettier": "prettier --write \"**/*.{ts,tsx}\" || true",
    "postinstall": "patch-package",
    "version": "lerna version  --conventional-commits --create-release github",
    "publish": "ultra -r --no-pretty yarn npm publish"
  },
  "resolutions": {
    "esbuild": "0.11.20"
  },
  "dependencies": {
    "esbuild-jest": "^0.5.0",
    "prettier": "^2.3.0",
    "prettier-plugin-import-sort": "^0.0.6",
    "react-native-web": "^0.15.6",
    "ultra-runner": "^3.10.5"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "patch-package": "^6.4.7",
    "rollup-plugin-flat-dts": "^1.1.0"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
