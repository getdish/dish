services:
  crawlers-ui:
    image: orkidio/orkid-ui
    port: 3100/http
    env:
      - HTTP_USER=user
      - HTTP_PASSWORD=password
      - REDIS_HOST=redis
  crawlers:
    image: ./services/crawlers
    build:
      dockerfile: ./services/crawlers/Dockerfile
      context: ./
    port: 8888/http
    env:
      - REDIS_HOST=redis
