{
  "name": "dish-monorepo",
  "private": true,
  "engines": {
    "node": "12.16.1"
  },
  "workspaces": {
    "packages": [
      "packages/auth",
      "packages/models",
      "packages/*",
      "apps/*",
      "services/*"
    ]
  },
  "scripts": {
    "start": "",
    "build": "tsc -b",
    "build:watch": "tsc -b -w --preserveWatchOutput",
    "test": "ava",
    "clean": "bin/clean.sh",
    "format": "swift-format --recursive --in-place ./apps/ios/dish",
    "postinstall": "wsrun -c postinstall"
  },
  "devDependencies": {
    "@types/node": "^13.7.4",
    "ava": "^3.4.0",
    "prettier": "^2.0.1",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.0-beta",
    "wsrun": "^5.2.0"
  },
  "dependencies": {
    "patch-package": "^6.2.1",
    "postinstall-postinstall": "^2.0.0"
  }
}
