{
  "name": "dish-monorepo",
  "private": true,
  "engines": {
    "node": "12.16.1"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*",
      "services/*"
    ]
  },
  "scripts": {
    "start": "",
    "start:docker": "docker-compose up",
    "start:docker:web": "yarn stop:docker:web && yarn start:docker:web:simple & sleep 2 && yarn logs:docker:web",
    "start:docker:web:simple": "docker run --name dish-web -it -d -p 19006:19006 --rm dish/web",
    "build:docker:web": "docker build -t dish/web -f apps/web/Dockerfile .",
    "logs:docker:web": "docker logs -f dish-web",
    "stop:docker:web": "docker rm -f dish-web || true",
    "build": "ultra -r --no-pretty --concurrency 16 build",
    "build:watch": "ultra -r --no-pretty --concurrency 500 watch",
    "build:monitor": "ultra --monitor",
    "build:watch:broken": "yarn tsc -b -w",
    "build:refs": "typescript-monorepo-toolkit inject-refs .",
    "test": "ultra -r --no-pretty --serial test",
    "clean": "bin/clean.sh",
    "migrate": "(cd services/hasura && hasura migrate apply --endpoint http://localhost:8080 --admin-secret=password)",
    "format": "swift-format --recursive --in-place ./apps/ios/dish",
    "prettier": "prettier --write \"**/*.{ts,tsx}\" || true",
    "postinstall": "yarn patch-package; yarn build:refs"
  },
  "resolutions": {
    "resolve": "1.17.0",
    "react-refresh": "0.8.3",
    "tslib": "1.11.2",
    "react": "0.0.0-experimental-94c0244ba",
    "react-dom": "0.0.0-experimental-94c0244ba",
    "react-test-renderer": "0.0.0-experimental-94c0244ba",
    "react-native": "0.62.2",
    "react-native-web": "0.12.3",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/react-native": "0.62.12",
    "@types/puppeteer": "3.0.1"
  },
  "devDependencies": {
    "react-refresh": "0.8.3",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "import-sort-style-module": "^6.0.0",
    "prettier-plugin-import-sort": "^0.0.4",
    "@types/node": "13.11.1",
    "ava": "^3.8.2",
    "prettier": "^2.0.4",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "4.0.1-rc",
    "ultra-runner": "^3.5.0",
    "wsrun": "5.2.0",
    "typescript-monorepo-toolkit": "^0.0.7",
    "patch-package": "^6.2.2"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
