{
  "name": "dish-monorepo",
  "private": true,
  "engines": {
    "node": "12.16.1"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*",
      "services/*"
    ]
  },
  "scripts": {
    "web": "(cd apps/dish-app && yarn web)",
    "ios": "(cd apps/dish-app && yarn ios)",
    "start:docker": "docker-compose up",
    "start:docker:web": "yarn stop:docker:web && yarn start:docker:web:simple & sleep 2 && yarn logs:docker:web",
    "start:docker:web:simple": "docker run --name dish-app -it -d -p 19006:19006 --rm dish/app",
    "build:docker:web": "docker build -t dish/app -f apps/dish-app/Dockerfile .",
    "logs:docker:web": "docker logs -f dish-app",
    "stop:docker:web": "docker rm -f dish-app || true",
    "build": "ultra -r --no-pretty --concurrency 16 build",
    "build:watch": "ultra -r --no-pretty --concurrency 500 watch",
    "build:monitor": "ultra --monitor",
    "build:watch:broken": "yarn tsc -b -w",
    "build:refs": "typescript-monorepo-toolkit inject-refs .",
    "test": "ultra -r --no-pretty --serial test",
    "clean": "bin/clean.sh",
    "migrate": "(cd services/hasura && hasura migrate apply --endpoint http://localhost:8080 --admin-secret=password)",
    "format": "swift-format --recursive --in-place ./apps/ios/dish",
    "prettier": "prettier --write \"**/*.{ts,tsx}\" || true",
    "preinstall": "bin/preinstall.sh",
    "postinstall": "bin/postinstall.sh",
    "expo:check-deps": "expo-yarn-workspaces check-workspace-dependencies"
  },
  "resolutions": {
    "typescript": "4.1.0-beta",
    "terser": "^5.3.0",
    "lodash": "4.17.20",
    "resolve": "1.17.0",
    "jsdom": "^16.4.0",
    "tslib": "1.11.2",
    "react": "0.0.0-experimental-94c0244ba",
    "react-dom": "0.0.0-experimental-94c0244ba",
    "react-test-renderer": "0.0.0-experimental-94c0244ba",
    "react-refresh": "0.0.0-experimental-94c0244ba",
    "react-native": "0.63.2",
    "react-native-web": "0.13.12",
    "react-native-svg": "12.1.0",
    "metro": "0.62.0",
    "metro-babel-register": "0.62.0",
    "metro-react-native-babel-preset": "0.62.0",
    "metro-config": "0.62.0",
    "metro-core": "0.62.0",
    "ts-node": "9.0.0",
    "@babel/runtime": "7.11.2",
    "@babel/core": "7.11.6",
    "@types/react": "16.9.46",
    "@types/react-dom": "16.9.8",
    "@types/react-native": "0.63.8",
    "@types/puppeteer": "3.0.1"
  },
  "dependencies": {
    "react": "0.0.0-experimental-94c0244ba",
    "react-dom": "0.0.0-experimental-94c0244ba"
  },
  "devDependencies": {
    "@unimodules/core": "^5.3.0",
    "@unimodules/react-native-adapter": "^5.4.0",
    "@types/fs-extra": "^9.0.1",
    "@babel/runtime": "^7.11.2",
    "@react-native-community/cli-debugger-ui": "4.7.0",
    "expo-yarn-workspaces": "*",
    "@types/node": "13.11.1",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "ava": "^3.8.2",
    "esm": "^3.2.25",
    "import-sort-style-module": "^6.0.0",
    "metro-babel-register": "0.62.0",
    "metro-config": "0.62.0",
    "metro-core": "0.62.0",
    "patch-package": "^6.2.2",
    "prettier": "^2.1.1",
    "prettier-plugin-import-sort": "^0.0.4",
    "react-refresh": "0.0.0-experimental-94c0244ba",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "4.1.0-beta",
    "typescript-monorepo-toolkit": "^0.1.1",
    "ultra-runner": "^3.5.0"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
