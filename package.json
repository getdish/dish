{
  "name": "dish-monorepo",
  "private": true,
  "engines": {
    "node": "12.16.1"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*",
      "services/*"
    ]
  },
  "scripts": {
    "start": "",
    "build": "yarn wsrun build",
    "build:watch": "yarn wsrun watch",
    "test": "ava",
    "clean": "bin/clean.sh",
    "format": "swift-format --recursive --in-place ./apps/ios/dish",
    "postinstall": "wsrun -c postinstall || true",
    "prettier": "wsrun -c prettier --write \"**/*.{ts,tsx}\" || true"
  },
  "devDependencies": {
    "import-sort-style-module": "^6.0.0",
    "prettier-plugin-import-sort": "^0.0.4",
    "@types/node": "13.11.1",
    "ava": "^3.4.0",
    "prettier": "^2.0.4",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.8.3",
    "wsrun": "^5.2.0"
  },
  "dependencies": {
    "patch-package": "^6.2.1",
    "postinstall-postinstall": "^2.0.0"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
