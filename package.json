{
  "name": "dish-monorepo",
  "private": true,
  "engines": {
    "node": "12.16.1"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*",
      "services/*"
    ]
  },
  "scripts": {
    "start": "",
    "build": "ultra -r --no-pretty build",
    "build:watch": "ultra -r --no-pretty --concurrency 500 watch",
    "build:monitor": "ultra --monitor",
    "build:watch:broken": "yarn tsc -b -w",
    "build:refs": "typescript-monorepo-toolkit inject-refs .",
    "test": "ultra -r --no-pretty test",
    "clean": "bin/clean.sh",
    "migrate": "(cd services/hasura && hasura migrate apply --endpoint http://localhost:8080 --admin-secret=password)",
    "format": "swift-format --recursive --in-place ./apps/ios/dish",
    "prettier": "prettier --write \"**/*.{ts,tsx}\" || true",
    "postinstall": "yarn build:refs && yarn patch-package"
  },
  "resolutions": {
    "resolve": "1.17.0",
    "tslib": "1.11.2",
    "react": "0.0.0-experimental-aae83a4b9",
    "react-dom": "0.0.0-experimental-aae83a4b9",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/react-native": "0.62.12",
    "react-native": "0.62.2"
  },
  "devDependencies": {
    "@zerollup/ts-transform-paths": "1.7.17",
    "import-sort-style-module": "^6.0.0",
    "prettier-plugin-import-sort": "^0.0.4",
    "@types/node": "13.11.1",
    "ava": "^3.8.2",
    "prettier": "^2.0.4",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.3",
    "ultra-runner": "^3.5.0",
    "wsrun": "5.2.0",
    "typescript-monorepo-toolkit": "^0.0.7",
    "patch-package": "^6.2.2"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
