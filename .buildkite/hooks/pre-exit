#!/bin/bash

set -eo pipefail

if [ "$FIRST_STEP" == "true" ]; then
  exit 0
fi

if [ "$LOG_DOCKER" == "true" ]; then
  echo "docker logs..."
  docker-compose logs --tail 2000
  cat *.logs || true
fi

if [ "$BUILDKITE_COMMAND_EXIT_STATUS" = "1" ]; then
  echo "shutting down docker"
  docker-compose down --volumes || true
fi

if [ "$BUILDKITE_COMMAND_EXIT_STATUS" = "1" ] || [ "$DOCKER_CLEAN" == "true" ]; then
  docker system prune -a --filter "until=1h" --force || true
  docker system df | head -n 20 || true
  docker images -a | head -n 20 || true
fi

echo "bye"
