#!/bin/bash

set -eo pipefail

if [ "$FIRST_STEP" == "true" ]; then
  exit 0
fi

if [ "$LOG_DOCKER" == "true" ]; then
  echo "docker logs..."
  docker-compose logs --tail 5000
  cat *.logs || true
fi

if [ "$DOCKER_CLEAN" == "true" ]; then
  docker system prune -a --force
  docker images -a
fi

echo "bye"
