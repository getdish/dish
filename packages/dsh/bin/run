#!/usr/bin/env node

const path = require('path')
const scrIndex = process.argv.findIndex(x => x.endsWith('/dsh'))
const fileName = process.argv[scrIndex + 1]
if (!fileName) {
  throw new Error(`No fileName given: ${fileName}`)
}
const script = path.join(process.cwd(), fileName)
require('esbuild-register')
require(script)
